#include "Sort.h"
int main()
{
    int N = 0;
    cout << "Enter n:";
    cin >> N;
    int* arr = new int[N];
    int* aux = new int[N];
    for (int i = 0; i < N; i++) {
        cout << "Enter element number " << i + 1 << endl;
        cin >> arr[i];
        aux[i] = arr[i];
    }
    mergesort(arr, aux, 0, N - 1);
    for (int i = 0; i < N; i++) {
        cout << arr[i] << " ";
    }
    return 0;
}
